<!DOCTYPE html>
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DigitalAfterlife</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DigitalAfterlife.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed&family=Montserrat&family=Nunito&family=Nunito+Sans&family=Open+Sans&family=PT+Sans&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent box-shadow mb-3">
            <div class="container">
                <i class="fa-brands fa-pied-piper-alt fa-2xl" style="color: #000000;">&nbsp;</i>
                <a class="navbar-brand text-dark" asp-area="" asp-page="/Portal/Portal">Digital Afterlife</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">

            <aside class="col-2">

                <div class="row justify-content-center align-items-center">

                    <div class="col-10 card shadow-2-strong" style="border-radius: 15px">
                        <div class="card-body p-1 p-md-5">
                            <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">

                                <li class="nav-item">
                                    <a asp-page="/Portal/Portal" asp-route-pageNr="" class="nav-text align-middle px-0">
                                        <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Översikt</span>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-page="/Portal/Ärende" class="nav-text align-middle px-0">
                                        <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Ärenden</span>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-page="/Portal/Portal" asp-route-pageNr="1" class="nav-text align-middle px-0">
                                        <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Dokument</span>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-page="/Portal/TabortSaker" class="nav-text align-middle px-0">
                                        <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Radera Digitala spår</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </aside>

            <div class="col-8 min-vh-100">
                <div class="container-fluid text-white">
                    @RenderBody()
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>
    <footer class="footer text-muted text-center text-white ">
        <div class="container">
            &copy; 2023 - DigitalAfterlife - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://kit.fontawesome.com/1114296e1a.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
