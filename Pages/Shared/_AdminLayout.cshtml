<!DOCTYPE html>
@{
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DigitalAfterlife</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DigitalAfterlife.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed&family=Montserrat&family=Nunito&family=Nunito+Sans&family=Open+Sans&family=PT+Sans&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent box-shadow mb-3">
            <div class="container-fluid mx-5">
                <i class="fa-brands fa-pied-piper-alt fa-2xl" style="color: #000000;">&nbsp;</i>
                <a class="navbar-brand text-dark" asp-area="" asp-route-pageNr="" asp-page="/Portal/Portal">DigitalAfterlife</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 text-dark"></ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <div class="container text-center">
                <div class="d-inline-flex">

                    <div class="text-center m-2">
                        <a class="da-btn-nav" asp-page="/Admin/RoleAdmin/Index">Roller</a>
                    </div>                    

                    <div class="text-center m-2">
                        <a class="da-btn-nav" asp-page="/Admin/NextOfKinAdmin/Index">Användare</a>
                    </div>

                    <div class="text-center m-2">
                        <a class="da-btn-nav" asp-page="/Admin/PerishedAdmin/Index">Avlidna</a>
                    </div>

                    <div class="text-center m-2">
                        <a class="da-btn-nav" asp-page="/Admin/ContentUpload">Content</a>
                    </div>
                    <div class="text-center m-2">
                        <a class="da-btn-nav" asp-page="/Admin/ApiServices">API</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="">
                <div class="container-fluid" ">
                @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/1114296e1a.js" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
