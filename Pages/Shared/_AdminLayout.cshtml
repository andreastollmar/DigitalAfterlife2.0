<!DOCTYPE html>
@{
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DigitalAfterlife</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DigitalAfterlife.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-route-pageNr="" asp-page="/Portal/Portal">DigitalAfterlife</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Index">Admin</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row justify-content-between">
            <div class="container-fluid py-2">
                <div class="row py-3" style="border: 2px solid red">

                    <div class="col text-center m-2" style="background-color: palegreen">
                        <a class="adminbtn" asp-page="/Admin/NextOfKinAdmin/Index">Användare</a>
                    </div>

                    <div class="col text-center m-2" style="background-color: bisque">
                        <a class="adminbtn" asp-page="/Admin/PerishedAdmin/Index">Avlidna</a>
                    </div>

                    <div class="col text-center m-2" style="background-color: burlywood">
                        <a class="adminbtn" asp-page="/Admin/ContentUpload">Content</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="">
                <div class="container-fluid" style="border: 2px solid green">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
