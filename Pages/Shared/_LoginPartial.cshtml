@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            if (await UserManager.IsInRoleAsync(user, "Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link text-white fw-bold" asp-page="/Admin/Index">Admin</a>
                </li>
            }
        }

        <li class="nav-item">
            <a class="nav-link text-white fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index">Mina sidor</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-white fw-bold">Logga ut</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white fw-bold" asp-area="Identity" asp-page="/Account/Register">Registrera</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white fw-bold" asp-area="Identity" asp-page="/Account/Login">Logga in</a>
        </li>
    }
</ul>
