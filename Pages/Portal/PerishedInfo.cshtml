@page
@model DigitalAfterlife2._0.Pages.Portal.PerishedInfoModel
@{
    ViewData["Title"] = "Create";
    Layout = "_InloggningsPortal";
}

<h1>Create</h1>

<h4>Perished</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Perished.SocialSecurity" class="control-label"></label>
                <input asp-for="Perished.SocialSecurity" class="form-control" />
                <span asp-validation-for="Perished.SocialSecurity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Perished.FirstName" class="control-label"></label>
                <input asp-for="Perished.FirstName" class="form-control" />
                <span asp-validation-for="Perished.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Perished.MiddleName" class="control-label"></label>
                <input asp-for="Perished.MiddleName" class="form-control" />
                <span asp-validation-for="Perished.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Perished.Surname" class="control-label"></label>
                <input asp-for="Perished.Surname" class="form-control" />
                <span asp-validation-for="Perished.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Perished.Phone" class="control-label"></label>
                <input asp-for="Perished.Phone" class="form-control" />
                <span asp-validation-for="Perished.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Perished.Email" class="control-label"></label>
                <input asp-for="Perished.Email" class="form-control" />
                <span asp-validation-for="Perished.Email" class="text-danger"></span>
            </div>                       
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
